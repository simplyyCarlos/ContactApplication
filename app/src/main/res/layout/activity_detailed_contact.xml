<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedContactActivity">


    <ImageView
        android:id="@+id/imageViewDetails"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="27dp"
        tools:srcCompat="@tools:sample/avatars" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imageViewDetails"
        android:text="@string/name_detail"
        android:textSize="34sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/imageViewDetails"
        app:layout_constraintTop_toBottomOf="@id/imageViewDetails"
        app:layout_constraintBottom_toTopOf="@id/divider"
        android:id="@+id/nameDetail"

        >

    </TextView>
    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/nameDetail"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="143dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_330625579445"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/imageViewDetails"
        app:layout_constraintEnd_toEndOf="@id/imageViewDetails"
        android:textSize="24sp"
        android:id="@+id/detailPhone"

        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_9_rue_pierre_de_coubertin"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/detailPhone"
        app:layout_constraintStart_toStartOf="@id/imageViewDetails"
        app:layout_constraintEnd_toEndOf="@id/imageViewDetails"
        android:textSize="24sp"
        android:id="@+id/detailAdress"

        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_01250"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/detailAdress"
        app:layout_constraintStart_toStartOf="@id/imageViewDetails"
        app:layout_constraintEnd_toEndOf="@id/imageViewDetails"
        android:textSize="24sp"
        android:id="@+id/detailZIP"

        >

    </TextView>




</androidx.constraintlayout.widget.ConstraintLayout>